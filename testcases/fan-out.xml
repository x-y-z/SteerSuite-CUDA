<SteerBenchTestCase xmlns="http://www.magix.ucla.edu/steerbench"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.magix.ucla.edu/steerbench 
                                        TestCaseSchema.xsd">

  <header>
    <version>1.0</version>
    <name>fan-out</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>
  
  <suggestedCameraView>
    <position> <x>0</x> <y>39</y> <z>-13</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>5</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <agent>
    <name>A</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>0</x> <y>0</y> <z>0</z> </position>
      <direction> <x>0</x> <y>0</y> <z>1</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>1</x> <y>0</y> <z>40</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agent>

  <agent>
    <name>B</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>0</x> <y>0</y> <z>-1.3</z> </position>
      <direction> <x>0</x> <y>0</y> <z>1</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>3</x> <y>0</y> <z>40</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agent>

  <agent>
    <name>C</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>-2</x> <y>0</y> <z>0</z> </position>
      <direction> <x>0</x> <y>0</y> <z>1</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>-1</x> <y>0</y> <z>40</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agent>

  <agent>
    <name>D</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>-1.4</x> <y>0</y> <z>-1</z> </position>
      <direction> <x>0</x> <y>0</y> <z>1</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>-3</x> <y>0</y> <z>40</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agent>

</SteerBenchTestCase>
