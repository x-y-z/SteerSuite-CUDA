<SteerBenchTestCase xmlns="http://www.magix.ucla.edu/steerbench"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.magix.ucla.edu/steerbench 
                                        TestCaseSchema.xsd">

  <header>
    <version>1.0</version>
    <name>curves</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>
  
  <suggestedCameraView>
    <position> <x>0</x> <y>24</y> <z>-10</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>2</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <obstacle>
    <xmin>-100</xmin>
    <xmax>2.1</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-1.99</zmin>
    <zmax>0</zmax>
  </obstacle>

  <obstacle>
    <xmin>-100</xmin>
    <xmax>4.1</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>0.01</zmin>
    <zmax>2</zmax>
  </obstacle>

  <obstacle>
    <xmin>-100</xmin>
    <xmax>2.1</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>2.001</zmin>
    <zmax>4</zmax>
  </obstacle>

  <obstacle>
    <xmin>-2.1</xmin>
    <xmax>100</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>6.01</zmin>
    <zmax>8</zmax>
  </obstacle>

  <obstacle>
    <xmin>-4.1</xmin>
    <xmax>100</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>8.01</zmin>
    <zmax>10</zmax>
  </obstacle>

  <obstacle>
    <xmin>-2.1</xmin>
    <xmax>100</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>10.001</zmin>
    <zmax>12</zmax>
  </obstacle>

  <agent>
    <name>A</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>-1</x> <y>0</y> <z>-3</z> </position>
      <direction> <x>1</x> <y>0</y> <z>0</z> </direction>
      <speed>0</speed>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>0</x> <y>0</y> <z>13</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agent>

</SteerBenchTestCase>
